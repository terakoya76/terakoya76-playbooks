{
  "model": "sonnet",
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(diff:*)",
      "Bash(duckdb:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(k6:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(pkill:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(tail:*)",
      "Bash(timeout:*)",
      "Bash(tree:*)",
      "Bash(true)",
      "Bash(wc:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(docker-compose config:*)",
      "Bash(npm:*)",
      "Bash(npm i:*)",
      "Bash(npm ci:*)",
      "Bash(npm test:*)",
      "Bash(npm run build:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run *)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm i:*)",
      "Bash(pnpm exec:*)",
      "Bash(pnpm lint:*)",
      "Bash(pnpm search:*)",
      "Bash(pnpm dev:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git grep:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git restore:*)",
      "Bash(git rm:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(git switch:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:grafana.com)",
      "mcp__memory__add_observations",
      "mcp__memory__create_entities",
      "mcp__memory__create_relations",
      "mcp__memory__delete_entities",
      "mcp__memory__delete_observations",
      "mcp__memory__open_nodes",
      "mcp__memory__read_graph",
      "mcp__memory__search_nodes",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_evaluate",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_select_option",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_wait_for",
      "mcp__sequential-thinking__sequentialthinking",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "mcp__mcp-deepwiki__deepwiki_fetch"
    ],
    "deny": [
      "Bash(curl:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "memory",
    "sequential-thinking",
    "context7",
    "mcp-deepwiki",
    "playwright"
  ],
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I {} ~/.claude/hooks/notify_slack.sh '{}'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify_slack.sh 'Complete the whole task'"
          }
        ]
      }
    ]
  }
}
